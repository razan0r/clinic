@model WebClinicaMVC.Models.Appointment

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Appointmenttion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="container mt-4">
        <h3 class="text-danger">Are you sure you want to delete this?</h3>
        <div>
            <h4>Appointment Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ProfissionalId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ProfissionalId)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PacienteId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PacienteId)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DataTimeAppointment)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DataTimeAppointment)
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>

</body>
</html>
