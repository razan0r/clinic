@model WebClinicaMVC.Models.Appointment

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Appointment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="container mt-4">
        <h4>Edit Appointment</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="ProfissionalId" class="form-label"></label>
                <input asp-for="ProfissionalId" class="form-control" />
                <span asp-validation-for="ProfissionalId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PacienteId" class="form-label"></label>
                <input asp-for="PacienteId" class="form-control" />
                <span asp-validation-for="PacienteId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DataTimeAppointment" class="form-label"></label>
                <input asp-for="DataTimeAppointment" class="form-control" />
                <span asp-validation-for="DataTimeAppointment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
