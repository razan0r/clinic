@model WebClinicaMVC.Models.Appointment

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Appointment Details</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="container mt-4">
        <h4 class="mb-4">Appointment Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ProfissionalId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProfissionalId)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.PacienteId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PacienteId)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DataTimeAppointment)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DataTimeAppointment)
            </dd>
        </dl>
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>

</body>
</html>
